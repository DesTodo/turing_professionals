  <h1 class = "page-header">All Members</h1>
    <div class="container-fluid">
      <div class="row">
        <% @users.each do |user| %>
        <div class="col-xs-6 col-sm-4 <%="user-card-#{user.id}"%>">
          <div class="thumbnail">
            <% if current_user == user %>
              <%= button_to "Your Profile", user_path(current_user), class: "pull-right" %>
            <% else %>
              <%= link_to favorite_users_path, data: {params: {favorite_user_id: user.id}.to_param, remote: true, method: :post}, class: "pull-right favorite-icon" do %>
                <span class="glyphicon glyphicon-star-empty" style="font-size:1.5em"></span>
              <% end %>
            <% end %>
            <img src="<%= user.image_url %>">
            <div class="caption">
              <h3><%= user.first_name %> <%= user.last_name %></h3>
                <% if user.location %>
                  Location: <%= user.location.city %>, <%= user.location.state %><br>
                <% end %>
                <% if user.workplaces.any? %>
                  Company: <%= user.workplaces.first.company.name %><br>
                <% end %>
                Cohort: <%= user.cohort %><br></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
