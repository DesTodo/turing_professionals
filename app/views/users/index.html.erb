  <h1 class = "page-header">All Members</h1>
    <div class="container-fluid">
      <div class="row">
        <% @members.each do |member| %>
        <div class="col-xs-6 col-sm-4">
          <div class="thumbnail">
            <span class="glyphicon glyphicon-star-empty pull-right" style="font-size:1.5em;" aria-hidden="true"></span>
            <img src="<%= member.image_url %>">
            <div class="caption">
              <h3><%= member.first_name %> <%= member.last_name %></h3>
                <% if member.location %>
                  Location: <%= member.location.city %>, <%= member.location.state %><br>
                <% end %>
                <% if member.workplaces.any? %>
                  Company: <%= member.workplaces.first.company.name %><br>
                <% end %>
                Cohort: <%= member.cohort %><br></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
