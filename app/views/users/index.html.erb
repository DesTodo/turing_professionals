  <h1 class = "page-header">All Members</h1>
    <div class="container-fluid">
      <div class="row">
        <% @users.each do |user| %>
        <div class="col-xs-6 col-sm-4 <%="user-card-#{user.id}"%>">
          <div class="thumbnail">
            <% if current_user == user %>
              <%= link_to user_path(current_user) %>
            <% else %>
              <span class="glyphicon glyphicon-star-empty pull-right" style="font-size:1.5em;" aria-hidden="true"></span>
            <% end %>
            <img src="<%= user.image_url %>">
            <div class="caption">
              <h3><%= link_to "#{user.first_name} #{user.last_name}", user_path(user.id) %></h3>
                <% if user.location %>
                  Location: <%= user.location.city %>, <%= user.location.state %><br>
                <% end %>
                <% if user.workplaces.any? %>
                  Company: <%= link_to "#{user.workplaces.first.company.name}", company_path(user.workplaces.first.company.id) %><br>
                <% end %>
                Cohort: <%= user.cohort %><br></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
